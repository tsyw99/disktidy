{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DiskTidy",
  "version": "1.0.1",
  "identifier": "com.disktidy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DiskTidy - 磁盘清理工具",
        "width": 1350,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "center": true,
        "decorations": false,
        "transparent": false,
        "visible": false,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ipc: http://ipc.localhost; img-src 'self' data: blob: asset: http://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APP/**", "$RESOURCE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "DiskTidy Team",
    "shortDescription": "Windows磁盘清理工具",
    "longDescription": "DiskTidy是一款专业的Windows磁盘清理工具，帮助用户清理垃圾文件、查找大文件、检测重复文件，释放磁盘空间。",
    "category": "Utility",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installMode": "currentUser",
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {}
}
